/* pages/userInfo/index.wxss */
.userInfo{
    display: flex;
    width: 100%;
    height: 300rpx;
    background-color: #aa4d3d;   
}
.userInfo-avatar{
    width: 25%;
    margin-left: 15%;
    margin-top: 50rpx;
    float: left;
    
}
.userInfo-nickname{
    width: 50%;
    margin-left: 10%;
    margin-top: 100rpx;
    color:#fff;
    font-size: 50rpx;
    text-align: left;
    font-weight: bold;
    float: right;
}
.userInfo_text{
    width: 100%;
    height: 100rpx;
    margin-top: 50rpx;
    color:#fff;  
    font-size: 30rpx;
    text-align: center;
}


.footer {
    width: 100%;
    height: 10vh;
    position: fixed;
    bottom: 0;
    display: flex;
    border-top: lightgray solid 1px;
    color: white;
    background-color: #aa4d3d;
    font-size: large;
  }
  
  .footer view {
    width: 100%;
    height: 100%;
    padding-top: 2vh;
    text-align: center;
  }