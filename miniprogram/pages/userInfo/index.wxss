
.userInfo {
    width: 100%;
    height: 300rpx;
    display: grid;
    grid-gap: 50rpx;
    grid-template-columns: repeat(6, 1fr);
    grid-template-rows: repeat(6, 1fr);
    background-color: #aa4d3d;
    box-shadow: 0rpx 0rpx 10rpx 10rpx #888;
}

.userInfo-avatar {
    width: 180rpx;
    grid-column: 2/3;
    grid-row: 2/4;
    border-radius: 10px;
}

.userInfo-nickname {
    grid-column: 3/6;
    grid-row: 2;
    color: #fff;
    font-size: 48rpx;
    text-align: left;
    font-weight: bold;
}

.userInfo-info {
    grid-column: 3/6;
    grid-row: 3;
    color: #fff;
    font-size: 28rpx;
    text-align: left;
}


.footer {
    width: 100%;
    height: 10vh;
    position: fixed;
    bottom: 0;
    display: flex;
    border-top: lightgray solid 1px;
    color: white;
    background-color: #aa4d3d;
    font-size: large;
  }
  
  .footer view {
    width: 100%;
    height: 100%;
    padding-top: 2vh;
    text-align: center;
  }