/* pages/index/index.wxss */
.userInfo{
    display: flex;
    width: 100%;
    height: 300rpx;
    background-color: #aa4d3d;   
    box-shadow: 0rpx 0rpx  10rpx 10rpx #888;
}
.userInfo-avatar{
    width: 25%;
    margin-left: 15%;
    margin-top: 50rpx;
    float: left;
    border-radius: 10px;
}
.userInfo-nickname{
    width: 50%;
    margin-left: 10%;
    margin-top: 100rpx;
    color:#fff;
    font-size: 50rpx;
    text-align: left;
    font-weight: bold;
    float: right;
}
.userInfo_text{
    width: 100%;
    height: 100rpx;
    margin-top: 50rpx;
    color:#fff;  
    font-size: 30rpx;
    text-align: center;
}
.myList{
    width: 100%;
    margin-top: 20rpx;
}
.myList_title{
    width: 100%;
    height: 80rpx;
}
.myList_title_text{
    float: left;
    line-height: 80rpx;
    width: 22%;
    margin-left: 30rpx;
    text-align: center;
    border-left: 12rpx solid #aa4d3d;
    font-weight: 700;
}
.myList_title_more{
    float: right;
    line-height: 80rpx;
    font-size: 24rpx;
    color: #aa4d3d;
    margin-right: 30rpx;
}
.myList_cell{
    margin-top: 30rpx;
}
.refresh{
    margin: 40rpx auto;
    font-size: 30rpx;
    color: #aa4d3d;
}
.about{
    margin: 0 auto;
}
